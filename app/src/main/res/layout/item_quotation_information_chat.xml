<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/padding_left_right_13dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="@color/iff_FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/chat_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="2018/03/25   13:24"
        android:textColor="@color/iff_999999"
        android:textSize="10sp" />

    <RelativeLayout
        android:id="@+id/chat_left_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:textColor="@color/iff_666666"
            android:textSize="14sp"
            android:id="@+id/chat_left_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/chat_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/chat_left_name"
            android:background="@drawable/chatfrom_bg_normal"
            android:gravity="center_vertical"
            android:text="请问订单还能有其他优惠吗？"
            android:textColor="@color/iff_666666"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_right_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:textColor="@color/iff_666666"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_right_name"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/chat_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toLeftOf="@id/chat_right_name"
            android:background="@drawable/chatto_bg_normal"
            android:gravity="center_vertical"
            android:text="不好意思，暂时没有"
            android:textColor="@color/iff_666666"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>