<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/layout_ll_head_mm_bg">

    <include layout="@layout/iff_title_layout" />

    <com.example.ysww.internationalfreightforwarding.custom.MyScrollview
        android:id="@+id/my_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/next_step_btn"
        android:layout_below="@+id/iff_title_cl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/padding_left_right_13dp"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:layout_marginTop="6dp"
                android:background="@color/iff_FFFFFF"
                android:gravity="center">

                <include layout="@layout/iff_details_of_goods_layout" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/details_of_goods_rv"
                style="@style/padding_left_right_13dp"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginTop="10dp"
                android:background="@color/iff_FFFFFF"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/iff_FFFFFF" />

            <RelativeLayout
                style="@style/padding_left_right_13dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/iff_FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/total_number_tv"
                    style="@style/ww_666_15sp"
                    android:layout_centerVertical="true"
                    android:text="总件数：" />

                <TextView
                    android:id="@+id/total_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/total_number_tv"
                    android:text="0"
                    android:textColor="@color/iff_333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/total_weight_tv"
                    style="@style/ww_666_15sp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/total_weight"
                    android:text="总重量(KG)：" />

                <TextView
                    android:id="@+id/total_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:textColor="@color/iff_333333"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/iff_FFFFFF" />

            <LinearLayout
                style="@style/padding_left_right_13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/iff_FFFFFF"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="8dp">

                <LinearLayout style="@style/ll_mv_4dp">

                    <TextView
                        style="@style/w90dp_w_666_15sp"
                        android:text="付款方式" />

                    <RadioGroup
                        android:id="@+id/payment_method_rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">

                        <com.example.ysww.internationalfreightforwarding.custom.ImageRadioButton
                            android:id="@+id/payment_method_rb1"
                            style="@style/btn_text_rb"
                            android:text="预付" />


                        <com.example.ysww.internationalfreightforwarding.custom.ImageRadioButton
                            style="@style/btn_text_rb"
                            android:text="到付" />

                    </RadioGroup>
                </LinearLayout>

                <LinearLayout style="@style/ll_mv_4dp">

                    <TextView
                        style="@style/w90dp_w_666_15sp"
                        android:text="关税支付方式" />

                    <RadioGroup
                        android:id="@+id/tariff_payment_rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">

                        <com.example.ysww.internationalfreightforwarding.custom.ImageRadioButton
                            android:id="@+id/tariff_payment_rb1"
                            style="@style/btn_text_rb"
                            android:text="收件人付" />

                        <com.example.ysww.internationalfreightforwarding.custom.ImageRadioButton
                            style="@style/btn_text_rb"
                            android:text="寄件人付" />

                    </RadioGroup>
                </LinearLayout>

                <LinearLayout style="@style/ll_mv_4dp">

                    <TextView
                        style="@style/w90dp_w_666_15sp"
                        android:text="交货方式" />

                    <RadioGroup
                        android:id="@+id/delivery_mode_rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">

                        <com.example.ysww.internationalfreightforwarding.custom.ImageRadioButton
                            android:id="@+id/delivery_mode_rb1"
                            style="@style/btn_text_rb"
                            android:text="自送渠道仓库" />

                        <com.example.ysww.internationalfreightforwarding.custom.ImageRadioButton
                            style="@style/btn_text_rb"
                            android:text="渠道上门" />

                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/iff_999999"
                android:text="订单图片"
                android:layout_marginLeft="13dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:background="@color/iff_FFFFFF"
                style="@style/padding_left_right_13dp"
                android:id="@+id/order_picture_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"/>
        </LinearLayout>
    </com.example.ysww.internationalfreightforwarding.custom.MyScrollview>

    <Button
        android:id="@+id/next_step_btn"
        android:layout_width="255dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_login_bg_style"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/next_step"
        android:textColor="@color/iff_FFFFFF"
        android:textSize="24sp" />
</RelativeLayout>